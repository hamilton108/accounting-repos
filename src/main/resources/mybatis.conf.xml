<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--
    <properties resource="db.properties"/>
    -->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://172.17.0.2:5432/rcs"/>
                <property name="username" value="rcs"/>
                <property name="password" value="ok"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="GeneralJournal.xml"/>
        <mapper resource="Invoice.xml"/>
        <mapper resource="Ns4102.xml"/>
        <!--
        <mapper resource="Hourlist.xml"/>
        <mapper resource="HourlistGroup.xml"/>
        <mapper resource="Stock.xml"/>
        -->
    </mappers>
</configuration>
